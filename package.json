{
  "name": "proxyscotch",
  "description": "Unofficial proxy server for https://hoppscotch.io",
  "version": "1.0.0",
  "main": "dist/electron/main.js",
  "scripts": {
    "build": "rm -rf dist && tsc --project ./tsconfig.build.json",
    "electron:build": "tsc --project ./tsconfig.electron.json",
    "electron:package": "yarn electron:build && electron-builder",
    "docker:build": "docker build -t proxyscotch:latest -f Dockerfile ."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/asomethings/proxyscotch.git"
  },
  "author": "asomethings <asomethings@kakao.com> (http://asomethings.com/)",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@types/ip": "^1.1.0",
    "@types/jest": "^26.0.13",
    "@types/node": "^14.6.3",
    "@types/supertest": "^2.0.10",
    "@types/yargs": "^15.0.5",
    "electron": "^10.1.1",
    "electron-builder": "^22.8.0",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "ip": "^1.1.5",
    "jest": "^26.4.2",
    "prettier": "^2.1.1",
    "supertest": "^4.0.2",
    "ts-jest": "^26.3.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "yargs": "^15.4.1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "build": {
    "appId": "com.asomethings.proxyscotch",
    "directories": {
      "output": "out"
    },
    "files": [
      "dist/**"
    ],
    "extraFiles": [
      "assets/tray-icon.png"
    ],
    "publish": {
      "provider": "github",
      "releaseType": "release"
    },
    "win": {
      "target": [
        {
          "target": "nsis-web"
        },
        {
          "target": "portable"
        }
      ]
    }
  }
}
