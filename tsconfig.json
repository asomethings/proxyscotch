{
  "compilerOptions": {
    "lib": ["es2019", "es2020.promise", "es2020.bigint", "es2020.string"],
    "module": "commonjs",
    "target": "es2019",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "sourceMap": false,
    "noUnusedParameters": true,
    "removeComments": true,
    "outDir": "dist",
    "typeRoots": ["@types", "node_modules/@types"],
    "baseUrl": "./"
  },
  "exclude": ["node_modules", "dist"]
}
